@model IEnumerable<Gimify.Entities.Posts>

	<h2>Posts</h2>


<div class="container">
	<!-- Додавання кнопки акаунту зверху праворуч -->
	<div style="text-align: right;">
		@if (User.Identity.IsAuthenticated)
		{
			<button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Logout", "Account")'">Logout</button>
		}
		else
		{
			<button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Login", "Account")'">Login</button>
		}
	</div>



	<div class="container">
		<table class="table table-bordered">
			<thead class="tabel-light">
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>id</th>
					<th>Fav</th>
					<th>Actions</th>
					
				</tr>


			</thead>
			<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td>@item.name</td>
						<td>
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.id">Читати</a>
                    </td>
						<td>@item.id</td>
					<td><form method="post" action="@Url.Action("Favourite", "Posts", new { id = item.id })" style="display:inline;">
						<button type="submit" >Add to Fav</button>
					</form>
					</td>
					<td>
						
						<form method="post" action="@Url.Action("Delete", "Posts", new { id = item.id })" style="display:inline;">
							<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
						</form>

					</td>
					</tr>
				}

			</tbody>
		</table>
	<div>
		<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Posts")'">Create Post</button>
	</div>
	</div>

